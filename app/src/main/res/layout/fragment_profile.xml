<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frisson="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white"
        >


        <com.intrusoft.library.FrissonView
            android:id="@+id/wave_head"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            frisson:alphaValue="30"
            frisson:tintColor="#DC000000"
            frisson:gradientType="linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            frisson:gradient_endColor="#cc000000"
            frisson:gradient_startColor="#00000000"
            frisson:src="@drawable/profile_background_image"
            frisson:tideCount="3"
            frisson:tideHeight="45dp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/imageViewBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/rounded_background_white"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/profileImage"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:layout_constraintStart_toStartOf="@+id/imageViewBackground"
                    app:layout_constraintEnd_toEndOf="@id/imageViewBackground"
                    app:layout_constraintTop_toTopOf="@id/imageViewBackground"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewBackground"
                    />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/background_rounded_green"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_marginEnd="5dp"
                    android:padding="10dp"
                    android:backgroundTint="#3F51B5"
                    app:layout_constraintEnd_toEndOf="@+id/imageViewBackground"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground"
                    android:id="@+id/btnEditProfileImage"
                    android:contentDescription="edit_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/profileName"
                    android:fontFamily="sans-serif"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewBackground"
                    android:gravity="center"
                    android:padding="10dp"/>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="50dp"
                    android:clickable="true"
                    android:id="@+id/card1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileImage"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/store"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/add_shop_details"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="60dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/card2"
                    android:visibility="visible"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card1">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/clock"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View order history"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="60dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="50dp"
                    android:visibility="visible"
                    android:id="@+id/card3"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card2">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/man"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/add_delivery_boy"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="60dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="50dp"
                    android:id="@+id/card4"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card3">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sharing"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/share_app"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="60dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="50dp"
                    android:id="@+id/card5"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card4">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/rating"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/rate_app"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="60dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="50dp"
                    android:id="@+id/card6"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card5">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/translate"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/select_language"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="60dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="50dp"
                    android:id="@+id/card7"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card6">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/terms_and_conditions"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Term,Policies and Licence"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="60dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:minHeight="55dp"
                    android:id="@+id/btnLogout"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/logout"
                        android:padding="5dp"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginEnd="10dp"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center|center_vertical"
                        />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Version: 0.1"
                    android:textSize="13sp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#504D4D"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnLogout"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>